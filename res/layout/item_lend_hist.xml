<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/base_margin_side">

    <TextView
        android:id="@+id/tv_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6.0dip"
        android:layout_marginLeft="@dimen/base_margin_side"
        android:padding="5dp"
        android:textSize="20sp" 
        android:text="书名"
        android:textColor="#9933CC"/>
    
     <TextView
        android:id="@+id/tv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin_side"
        android:layout_marginTop="@dimen/now_lend_item_margin_top"
        android:singleLine="true"
        android:text="作者:"
        android:textSize="@dimen/now_lend_text_size" />
    
    <TextView
        android:id="@+id/tv_book_isbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin_side"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:text="条形码:"
        android:textSize="@dimen/now_lend_text_size" />

    <TextView
        android:id="@+id/tv_book_lend_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin_side"
        android:layout_marginTop="@dimen/now_lend_item_margin_top"
        android:singleLine="true"
        android:text="借阅日期:"
        android:textSize="@dimen/now_lend_text_size" />

    <TextView
        android:id="@+id/tv_book_return_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin_side"
        android:layout_marginTop="@dimen/now_lend_item_margin_top"
        android:singleLine="true"
        android:text="归还日期:"
        android:textSize="@dimen/now_lend_text_size" />

    <TextView
        android:id="@+id/tv_book_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/base_margin_side"
        android:layout_marginTop="@dimen/now_lend_item_margin_top"
        android:singleLine="true"
        android:text="馆藏地:"
        android:textSize="@dimen/now_lend_text_size" />

</LinearLayout>